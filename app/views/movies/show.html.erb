<div class="wrapper">
  <div class="container">
    <div class="row poster">
      <div class="col-md-6 text-center">
        <div id="show-movie-image">
          <%= image_tag @movie.poster_url %>
          <%#= cl_image_tag @movie.poster, width: 450, height: 600, crop: :fill %>
        </div>
      </div>
      <div class="col-md-6 movie-details">
        <div class="title-header">
          <div class="title-header-item">
            <h1><%= @movie.title %></h1>
          </div>


          <div id="add-buttons">
            <div class="title-header-item">
              <%= link_to movie_watchlist_items_path(@movie), class: "btn btn-lg add-to-watchlist-button", method: "post" do %>
                    <i class="fas fa-plus"></i>
              <% end %>
            </div>



            <div class="dropdown">
              <button class="btn btn-lg secondary-cta" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="main-cta"></i><i class="fas fa-plus"></i> Add to List
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <% @playlists.each do |playlist| %>
                  <%= link_to playlist.name, movie_movie_playlists_path(@movie, :@playlist => playlist), method: "post", class: "dropdown-item" %>
                <% end %>
                <a class="dropdown-item"
                  <%= link_to movies_path(@movie), class: "nav-link" do%>
                    <p><b>+ New List</b></p>
                  <% end %>
              </div>
            </div>




          </div>
        </div>
        <p class="release-date"><%= @movie.release_date %></p>
        <hr>
        <p><b>Directed by:</b> <%= @movie.director %></p>
        <p><b>Duration:</b> <%= @movie.duration %></p>
        <p><b>Categories:</b>
          <% @categories.each do |category| %>
            <%= category.name %>
          <% end %>
        <p><b>Syllabus:</b> <%= @movie.syllabus %></p>

          <div id="watch-btn">
            <div class="show-cta">
            <%= link_to watch_movie_path(@movie) do %>
              <button class="main-cta"><i class="fas fa-play mr-3"></i>Movie</button>
            <% end %>
            </div>
            <div class="show-cta">
              <%= link_to watch_movie_path(@movie) do %>
                <button class="secondary-cta"><i class="fas fa-play mr-3"></i>Trailer</button>
              <% end %>
            </div>
          </div>

          <hr>
          <div>
            <% if @movie.reviews.any? %>
            <div class="same-line together">
              <p><b>Average rate</b>: </p><span class="stars"><%= @movie.rating %></span>
            </div>
            <% @movie.reviews.each do |review| %>
              <div class="same-line">
                <p>- "<%= review.comment %>" (posted by <%= review.user.username %> on <%= review.review_date %>)</p><span class="stars"><%= review.rate %></span>
              </div>
            <% end %>
          <% else %>
            <p>This movie does not have any review yet; rent it to be able to add a review!</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="container">
    <div class="row poster">
      <div class="col-md-6 text-center">
        <div id="show-movie-image">
          <%= image_tag @movie.poster_url %>
          <%#= cl_image_tag @movie.poster, width: 450, height: 600, crop: :fill %>
        </div>
      </div>
      <div class="col-md-6 movie-details">
        <div class="title-header">
          <h1><%= @movie.title %></h1>
            <div class="btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-sm btn-outline-danger inactive btn-add-to-watchlist">
              <input type="checkbox" checked autocomplete="off"> <b>+</b>
            </label>
          </div>
        </div>
        <h3><%= @movie.release_date %></h3>
        <hr>
        <p><b>Directed by:</b> <%= @movie.director %></p>
        <p><b>Duration:</b> <%= @movie.duration %></p>
        <p><b>Categories:</b>
          <% @categories.each do |category| %>
            <%= category.name %>
          <% end %>
        <p><b>Syllabus:</b> <%= @movie.syllabus %></p>
        <div class="show-cta">
            <%= link_to 'Watch this movie', movie_path(@movie), class: "btn btn-danger btn-lg" %>
            <div class="dropdown add-to-list-button">
              <button class="btn btn-outline-danger btn-lg dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-plus"></i> Add to List
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Sex Playlist</a>
                <a class="dropdown-item" href="#">Motivation</a>
                <a class="dropdown-item"
                  <%= link_to movies_path(@movie), class: "nav-link" do%>
                   <p><b>+ Add to list</b></p>
                  <% end %>
                </a>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>




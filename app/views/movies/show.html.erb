<div class="wrapper">
  <div class="container">
    <div class="row poster">
      <div class="col-md-6 text-center">
        <%#= simple_form_for @movie, remote: true) do |form| %>
          <%#= form.input :content, as: :text %>
          <%#= form.button :submit %>
        <%# end %>






        <div id="show-movie-image">
          <%= cl_image_tag @movie.poster, width: 450, height: 600, crop: :fill %>
        </div>
      </div>
      <div class="col-md-6 movie-details">
       <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default btn-lg"><i class="fas fa-plus"></i></button>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Add to List
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><a href="#">Sex Playlist</a></li>
                <li><a href="#">Motivation</a></li>
                <li><a href="#"><%= link_to '>> New Playlist', movie_path(@movie) %></a></li>
              </ul>
            </div>
        </div>
        <h1><%= @movie.title %></h1>
        <h3><%= @movie.release_date %></h3>
        <hr>
        <p>Duration: <%= @movie.duration %></p>
        <p>Directed by: <%= @movie.director %></p>
        <p>Categories:
          <% @categories.each do |category| %>
            <%= category.name %>
          <% end %>
        <p>Syllabus: <%= @movie.syllabus %></p>
        <hr>
         <% if @movie.reviews.any? %>
          <div class="same-line together">
            <p>Average rate: </p><span class="stars"><%= @movie.rating&.fdiv(2) %></span>
          </div>
          <% @movie.reviews.each do |review| %>
            <div class="same-line">
              <p>- "<%= review.content %>" (posted by <%= review.user.username %> on <%= review.review_date %>)</p><span class="stars"><%= review.rate&.fdiv(2) %></span>
            </div>
          <% end %>
          <% else %>
            <p>This movie does not have any review yet; rent it to be able to add a review!</p>
        <% end %>
        <div class="show-cta">
          <%# if @movie.user == @user || @movie_rented.include?(@movie) %>
            <%= link_to 'Watch this movie', movie_path(@movie), class: "btn btn-danger btn-lg" %>
            <div class="btn-group" role="group" aria-label="...">
              <button type="button" class="btn btn-default btn-lg"><i class="fas fa-plus"></i></button>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Add to List
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <li><a href="#">Sex Playlist</a></li>
                  <li><a href="#">Motivation</a></li>
                  <li><a href="#"><%= link_to '>> New Playlist', movie_path(@movie) %></a></li>
                </ul>
              </div>
            </div>



          <%# else %>
            <%#= link_to 'Buy this movie' , movie_rentings_path(@movie), method: "post", class: "btn btn-danger btn-lg" %>
          <%# end %>
        </div>
      </div>
    </div>

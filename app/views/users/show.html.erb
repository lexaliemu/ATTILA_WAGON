<div class="wrapper">
  <div class="container">

    <div class="header_user_show">
      <%= cl_image_tag @user.avatar, class: "avatar-user-show", width: 300, height: 300, crop: :fill %>
      <div class="header_info_user_show">
        <h2 id="username_user_show" class="header_cta_user_show"><%= @user.first_name %> <%= @user.last_name %></h2>
        <div class="header_cta_user_show_buttons">
          <%= link_to "Search for a user", search_results_movies_path, class: "main-cta-user-show", id: "shortcut_cta_user_show" %>
          <%= link_to "Search for a user to follow", search_results_movies_path, class: "btn btn-primary", id: "shortcut_cta_user_show" %>
          <%= link_to "Search for a user to follow", search_results_movies_path, class: "btn btn-primary", id: "shortcut_cta_user_show" %>
        </div>
      </div>
    </div>

    <div class="title_user_show">
      <h4><%= @user.first_name %> <%= @user.last_name %>'s lists of movies</h4>
      <%= link_to "Add a new list", users_path(@user), class: "btn blue" %>
    </div>

    <div class="carousel">
      <div class="multiple-items">
        <% @playlists.each do |playlist| %>
            <div class="card item">
              <%= link_to playlist_path(playlist) do %>
                <div class="playlist_picture_user_show">
                  <%= cl_image_tag playlist.picture, height: 200, width: 200, crop: :fill %>
                </div>
              <% end %>
              <div "playlist_info_user_show">
                <p><strong><%= playlist.name %></strong></p>
                <p class="date">Created on <%= playlist.playlist_date.strftime("%B %d, %Y") %></p>
              </div>
            </div>
        <% end %>
        <% @playlists.each do |playlist| %>
            <div class="card item">
              <%= link_to playlist_path(playlist) do %>
                <div class="playlist_picture_user_show">
                  <%= cl_image_tag playlist.picture, height: 200, width: 200, crop: :fill %>
                </div>
              <% end %>
              <div "playlist_info_user_show">
                <p><strong><%= playlist.name %></strong></p>
                <p class="date">Created on <%= playlist.playlist_date.strftime("%B %d, %Y") %></p>
              </div>
            </div>
        <% end %>
      </div>
    </div>

    <div class="title_user_show">
      <h4><%= @user.first_name %> <%= @user.last_name %>'s followed users</h4>
      <%= link_to "Search for a user", search_results_movies_path, class: "btn blue" %>
    </div>

    <% @user.following.each do |x| %>
     <p> <%= link_to x.username, user_path(x) %>
    <% end %>

  </div>
</div>

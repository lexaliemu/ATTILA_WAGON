              <%= render "movie_square", movie: movie_pair[0] %>
              <%= render "movie_square", movie: movie_pair[1] %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="container-category">
        <div id="category-header">
          <h4>Drama movies</h4>
          <%= link_to "See all", movies_path, class: "btn blue" %>
        </div>

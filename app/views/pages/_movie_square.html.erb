<div class="square">
  <%= link_to movie_path(movie) do  %>
    <div class="movie-cover">
      <%= cl_image_tag movie.poster, width: 100, height: 150, crop: :fit %>
    </div>
  <% end %>
  <div class="movie-title-director">
    <p><strong><%=h truncate(movie.title, :length => 40) %></strong></p>
    <p><%= movie.director %></p>
  </div>
</div>


